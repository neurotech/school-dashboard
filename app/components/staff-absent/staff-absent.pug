//- Staff Away - Now
div(v-cloak).bit-2
  #staff-absent-now(v-if="staffAbsent.now.length > 0").bit-1.block
    header.block-header.yellow-block Staff Away - Now
    table.block-content.bit-1
      tr.block-row(v-for="item in staffAbsent.now")
        td(width="30%").block-name {{item.firstname}} {{item.surname}}
        td(width="40%").block-time {{niceTime(item.dateFrom + ' ' + item.timeFrom)}} to {{niceTime(item.dateTo + ' ' + item.timeTo)}}
        td(width="30%").block-reason {{item.awayReason}}

  //- Staff Away - Soon
  #staff-absent-soon(v-if="staffAbsent.soon.length > 0").bit-1
    header.block-header.blue-block Staff Away - Soon
    table.block-content.bit-1
      tr.block-row(v-for="item in staffAbsent.soon")
        td(width="30%").block-name {{item.firstname}} {{item.surname}}
        td(width="40%").block-time {{niceTime(item.dateFrom + ' ' + item.timeFrom)}} to {{niceTime(item.dateTo + ' ' + item.timeTo)}}
        td(width="30%").block-reason {{item.awayReason}}

//- Staff Away - All Day
div(v-cloak).bit-2
  #staff-absent-all-day(v-if="staffAbsent.allDay.length > 0").bit-1
    header.block-header.red-block Staff Away - All Day
    table.block-content.bit-1
      //- limitBy 2 0 === Show the first two items
      //- limitBy 2 2 === Show items 3, 4
      //- limitBy 2 4 === Show items 5, 6
      //- limitBy 2 6 === Show items 7, 8
      tr.block-row(v-for="item in staffAbsent.allDay")
        td(width="50%").block-name {{item.firstname}} {{item.surname}}
        td(width="50%").block-reason {{item.awayReason}}
